[gpg]
    format = ssh
[gpg "ssh"]
    program = "{{ .chezmoi.homeDir | replaceAllRegex "/" "\\\\" -}}\\AppData\\Local\\Microsoft\\WindowsApps\\op-ssh-sign.exe"
[commit]
    gpgsign = true
[user]
    signingkey = {{ .git.default.publicKey }}
    name = {{ .git.default.name }}
    email = {{ .git.default.email }}
[credential]
    helper = cache --timeout 604800
    helper = oauth
[core]
    sshCommand = "C:/Windows/System32/OpenSSH/ssh.exe"
